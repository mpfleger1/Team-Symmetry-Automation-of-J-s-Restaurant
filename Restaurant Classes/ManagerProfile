import java.util.List;
import java.util.Scanner;
import java.util.ArrayList;



public class Profile {
    Scanner sc = new Scanner(System.in);
    private List<ProfileD> profiles = new ArrayList<>();
    private int ID = 100000;
    private String fname;
    private String lname;
    private int dob;

    private String password;
    private String role;

    public void action() {
    System.out.println("Create New Profile? (Y/N)");
    char input = sc.next().charAt(0);

    switch(input){
        case 'Y':
            ID = ID + 1;
            System.out.println("Role: ");
            role = sc.next();
            System.out.println("First Name: ");
            fname = sc.next();
            System.out.println("Last Name: ");
            lname = sc.next();
            System.out.println("DOB (MMDDYYYY): ");
            dob = sc.nextInt();
            System.out.println("Employee ID: " + ID);
            int thisID = ID;
            System.out.println("Password: ");
            password = sc.next();

            ProfileD profile = new ProfileD(role, ID, fname, lname, dob, password);
            profiles.add(profile);
            System.out.println("Profile created.");
            break;

        case 'N':
            System.out.println("Return to Home Page? (Y/N)");
            char answer = sc.next().charAt(0);
            if (answer == 'Y'){
                System.out.println("Returning to Homepage");
               break;
            }

            else {
                System.out.println("Staying on Page");
                break;
            }

        default:
            throw new IllegalStateException("Unexpected value: " + input);
    }
}

    public void modify(String name) {
        if (profiles.isEmpty()) {
            System.out.println("No profiles available to modify.");
            return;
        }

        Scanner sc = new Scanner(System.in);
        System.out.println("Type the name of the profile you'd like to modify: ");
        name = sc.nextLine();
        boolean correct = false;

        for(ProfileD profile : profiles){
            if (profile.fname.equals(name)){
                correct = true;

                System.out.println("What would you like to modify?: ");
                String change = sc.nextLine();

                switch(change){
                    case "First name":
                        System.out.println("What would you like to change the first name to?");
                        profile.fname = sc.next();
                        System.out.println("Profile modified.");
                        break;

                    case "Last name":
                        System.out.println("What would you like to change the last name to?");
                        profile.lname = sc.next();
                        System.out.println("Profile modified.");
                        break;

                    case "DOB":
                        System.out.println("What would you like to change the date of birth to?");
                        profile.dob = sc.nextInt();
                        System.out.println("Profile modified.");
                        break;

                    case "Password":
                        System.out.println("What would you like to change the password to?");
                        profile.password = sc.next();
                        System.out.println("Profile modified.");
                        break;

                    case "Role":
                        System.out.println("What would you like to change the role to?");
                        profile.role = sc.next();
                        System.out.println("Profile modified.");
                        break;

                    default:
                        throw new IllegalStateException("Unexpected value: " + change);
                }
                correct = true;
                break;
            }
            System.out.println("Profile not found");
        }

        }
            public List<ProfileD> getProfiles(){
             return profiles;
        }
    }

